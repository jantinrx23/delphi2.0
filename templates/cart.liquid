<div class="cart-form flex flex-col h-[100vh] justify-center items-center py-7 gap-10px">
  {% if cart.item_count > 0 %}
  <h1 class="mb-[10vh] text-2xl">CART</h1>
  <form action="/cart" method="post" novalidate>
    <table>
      <thead class="w-full">
        <div class="grid grid-cols-4">
			<div class="text-center mx-auto">Prod</div>
	        <div class="text-center mx-auto">Price</div>
	        <div class="text-center mx-auto">Qty</div>
	        <div class="text-center mx-auto">total</div>
		</div>
      </thead>
      <tbody>
        {% for item in cart.items %}
          <div class="grid grid-cols-4 bg-green-400">
            <div class="mx-auto flex flex-col items-center bg-blue-400">
              <a href="{{ item.url | within: collections.all }}">
                <img src="{{ item | img_url: 'medium' }}" alt="{{ item.title | escape }}">
              </a>
			    <div class="mx-auto">
	              <a href="{{ item.url }}">{{ item.product.title }}</a>
	              {{ item.variant.title }}
	              <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0">remove</a>
	            </div>
            </div>
            
            <div class="mx-auto">{{ item.price | money }}</div>
            <div class="mx-auto">
              <input type="number" name="updates[]" id="updates_{{ item.key }}" value="{{ item.quantity }}" min="0">
            </div>
            <div class="mx-auto">
              {% if item.original_line_price != item.line_price %}{{ item.original_line_price | money }}{% endif %}
              {{ item.line_price | money }}
              {% for discount in item.discounts %}{{ discount.title }}{% endfor %}
            </div>
          </div>
        {% endfor %}
      </tbody>
    </table>
    <div class="flex justify-end items-center gap-7 mt-5">
      <p>sub total : {{ cart.total_price | money }}</p>
      <button type="submit" name="update" class="bg-[black] text-white px-5 py-3">Update</button>
      <button type="submit" name="checkout" class="bg-[black] text-white px-5 py-3">Checkout</button>
    </div>
  </form>
{% else %}
  <h2>cart</h2>
  Cart is empty
{% endif %}
</div>